<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Music</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="bg-gray-100 text-gray-900">
  <% playlists.forEach(playlist=> { %>

    <!-- Playlist Container -->
    <div class="max-w-4xl mx-auto my-10 p-6 rounded-lg shadow-lg bg-white">

      <!-- Playlist Header -->
      <div class="playlist-header flex items-center justify-between mb-8">
        <a href="/playlist/songs/<%= playlist._id %>" class="text-4xl font-bold">
          <%= playlist.name %>
        </a>
        <img src="/images/<%= playlist.poster %>" alt="<%= playlist.name %> Poster"
          class="w-32 h-32 object-cover rounded-lg shadow-lg">
      </div>

      <!-- Playlist Owner -->
      <div class="playlist-owner mb-6">
        <h3 class="text-xl font-semibold text-gray-700">Created By: <%= username %>
        </h3>
      </div>

      <!-- Tracks Section -->
      <div class="playlist-tracks mb-8">
        <h2 class="text-2xl font-semibold mb-4">Tracks</h2>
        <% if (playlist.tracks.length> 0) { %>
          <ul class="space-y-4">
            <% playlist.tracks.forEach(function(track) { %>
              <li class="p-4 bg-gray-50 rounded-lg shadow-sm flex items-center justify-between">
                <div>
                  <strong class="text-lg">
                    <%= track.title %>
                  </strong>
                  <span class="text-gray-600">(<%= track.duration %> minutes)</span>
                </div>
                <audio controls class="ml-4">
                  <source src="<%= track.fileUrl %>" type="audio/mpeg">
                  Your browser does not support the audio element.
                </audio>
              </li>
              <% }) %>
          </ul>
          <% } else { %>
            <p class="text-gray-500">No tracks available in this playlist.</p>
            <% } %>
      </div>

      <!-- Timestamps -->
      <div class="playlist-info text-sm text-gray-500 flex items-center justify-between">
        <div>
          <p>Created on: <%= playlist.createdAt.toDateString() %>
          </p>
          <p>Last updated: <%= playlist.updatedAt.toDateString() %>
          </p>
        </div>
        <a href="/music/allsongs" class="text-blue-500">Add more songs</a>
      </div>
    </div>
    <% }) %>
</body>

</html>